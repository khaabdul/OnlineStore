<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>CoAndPro</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>Home.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>check</filter-name>
		<filter-class>com.Backend.Security_Fillter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>check</filter-name>
		<url-pattern>/login</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>producthome</servlet-name>
		<servlet-class>com.Customer.Product_Details</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>producthome</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>product</servlet-name>
		<servlet-class>com.Backend.Product_Controler</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>product</servlet-name>
		<url-pattern>/pro</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>admin</servlet-name>
		<servlet-class>com.Backend.Admin_Controler</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>admin</servlet-name>
		<url-pattern>/adm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>coupon</servlet-name>
		<servlet-class>com.Backend.Coupon_Controler</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>coupon</servlet-name>
		<url-pattern>/coup</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>customer</servlet-name>
		<servlet-class>com.Backend.Customer_Controler</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>customer</servlet-name>
		<url-pattern>/coust</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>cart</servlet-name>
		<servlet-class>com.Customer.AddToCart</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>cart</servlet-name>
		<url-pattern>/acart</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>message</servlet-name>
		<servlet-class>com.Customer.Message</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>message</servlet-name>
		<url-pattern>/mes</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.Customer.Logout</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logu</url-pattern>
	</servlet-mapping>
</web-app>